@model IEnumerable<AutoPartsHub.Models.TblCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* INDEX TABLE DESIGN *@

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header bg-theme ">
                <h4 class="card-title text-white">Categories</h4>
                <button type="button" class="btn bg-white" id="CreateColor">

                    <a asp-action="Create" class="text-theme" style="color:#fff" id="CreateRoll">Create New</a>
                </button>

            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-responsive-md">



    <thead>
        <tr>
                                <th>
                                    Category Image
                                </th>
            <th>
                                    Category Name
            </th>
            <th>
                                    Category Title
            </th>
            <th>
                                    Category Description
            </th>
           
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                                    <td>

                                        <img src="@Html.DisplayFor(modelItem => item.CategoryImage)" alt="CategoryImg" class="w-100 img-responsive" />
                                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                                        @Html.DisplayFor(modelItem => item.CategoryTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
           
            <td>

                                    <td style="display: flex;margin-left: -20px !important;">
                                        <a asp-action="Edit" class="btn  btn-sm m-2 btn-primary" asp-route-id="@item.CategoryId"><i class="fa fa-edit "></i></a>

@*                  <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
 *@
                                        <form asp-action="Delete" method="post" class="deleteForm">
                                            <input type="hidden" name="id" value="@item.CategoryId" asp-for="@item.CategoryId" />
                                            <button type="submit" class="btn btn-danger btn-sm m-2"><i class="fa fa-trash"></i></button>
                                        </form>
                                    </td>

            
        </tr>
}
    </tbody>
</table>
                </div>
            </div>
        </div>
    </div>
</div>