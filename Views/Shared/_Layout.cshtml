        function LoadCartData(){

            $.ajax({
                type: 'GET',
                url: '/GetCartCount',

                success: function (response) {
                    if (response.success) {

                        $("#cartTotalId").html(response.message);
                        // Show success message
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('Error occurred while adding item to cart');
                }
            });
        }
