@model IEnumerable<AutoPartsHub.Models.TblRoll>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* INDEX TABLE DESIGN *@

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header bg-theme">
                <h4 class="card-title text-white">Roles</h4>
                <button type="button" class="btn bg-white" id="CreateRole">

                    <a asp-action="Create" class="text-theme" style="color:lemonchiffon" id="CreateRoll">Create New</a>
                </button>

            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-responsive-md">
                        <thead>
                            <tr>
                                <th>
                                    Role Name
                                </th>

                                <th>
                                    Actions
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RollName)
                                    </td>


                                    <td style="display: flex;margin-left: -30px !important;">

                                        <a asp-action="Edit" class="btn btn-sm m-2 btn-primary" asp-route-id="@item.RollId"><i class="fa fa-edit "></i></a>
                                        <form asp-action="Delete" class="deleteForm">
                                            <input type="hidden" name="id" value="@item.RollId" asp-for="@item.RollId" />
                                            <button type="submit" class="btn btn-danger btn-sm m-2"><i class="fa fa-trash"></i></button>
                                        </form>

                                      
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>
