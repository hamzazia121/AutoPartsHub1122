@model AutoPartsHub.Models.TblItemTag

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btnf-r {
        float: right !important;
    }
</style>

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add Item Tags</h4>


            </div>

            <div class="card-body">
                <div class="form-validation">


                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label asp-for="TagId" class="control-label">Tag Id</label>
                                <select asp-for="TagId" class="form-control" asp-items="ViewBag.TagId">
                                    <option>-----Select Tag-----</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ItemId" class="control-label">Item Id</label>
                                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.ItemId">
                                    <option>-----Select item-----</option>
                                </select>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12 mt-4">
                                    <input type="submit" value="Create" class="btn btn-success btnf-r " />
                                    <a asp-action="Index" class="btn btn-warning btnf-r" style="margin-right:2px !important">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

