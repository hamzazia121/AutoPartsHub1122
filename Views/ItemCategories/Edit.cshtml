@model AutoPartsHub.Models.TblItemCategory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btnf-r {
        float: right !important;
    }
</style>

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Edit Item Category</h4>


            </div>

            <div class="card-body">
                <div class="form-validation">



        <form asp-action="Edit">
